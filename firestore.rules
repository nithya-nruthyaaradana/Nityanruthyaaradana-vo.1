rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access for content displayed on the live site
    match /gallery/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /pages/{pageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow authenticated users (admins) to manage student registrations
    match /registrations/{registrationId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users (admins) to manage the students collection for the dashboard
    match /students/{studentId} {
      allow read, write: if request.auth != null;
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}