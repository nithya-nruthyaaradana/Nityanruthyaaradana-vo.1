
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to all collections for the live site.
    // Allow public write access for the admin panel.
    // NOTE: For a production app, write access should be restricted to authenticated admins.
    match /{collection}/{docId} {
      allow read, write: if true;
    }
  }
}
