rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Public collections are world-readable, but only admins can write.
    match /gallery/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /pages/{pageName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /settings/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Registrations can only be read and written by authenticated admins.
    match /registrations/{registrationId} {
      allow read, write: if request.auth != null;
    }

    // Default deny access to all other collections/documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
