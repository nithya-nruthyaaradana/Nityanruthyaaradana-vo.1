
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // PUBLIC ACCESS: Allow anyone to read from these collections
    match /(pages|gallery|settings)/{document=**} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }

    // REGISTRATIONS: Only authenticated users can create, read, update, delete
    match /registrations/{docId} {
       allow read, write: if request.auth != null;
    }
    
    // STUDENTS: Only authenticated users can read, write
    match /students/{docId} {
       allow read, write: if request.auth != null;
    }
  }
}

    