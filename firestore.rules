rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read-only access to general site content
    match /pages/{pageId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }

    match /gallery/{imageId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null; // Only authenticated users can manage gallery
    }

    // Allow anyone to submit a registration (create)
    // but only authenticated users can read or delete them.
    match /registrations/{registrationId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null; // Admins can manage registrations
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
