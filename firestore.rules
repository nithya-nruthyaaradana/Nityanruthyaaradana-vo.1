rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to content visible on the live site
    match /pages/{pageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Gallery can be read by public, but only created, updated, or deleted by admins
    match /gallery/{imageId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Registrations can only be managed by authenticated admins
    match /registrations/{registrationId} {
      allow read, write, create, delete: if request.auth != null;
    }
    
    // Students collection is only for admins
    match /students/{studentId} {
      allow read, write, create, delete: if request.auth != null;
    }

    // Default deny all other collections for security
    match /{path=**}/documents/{document} {
        allow read, write: if false;
    }
  }
}
